<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/content_movie_master"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huyvuong.udacity.popularmovies.ui.activity.MovieMasterFragment"
    tools:showIn="@layout/activity_movie_master">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_empty_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="32dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:textSize="@dimen/text_size_master_empty_placeholder"
        android:fontFamily="sans-serif-thin"
        android:visibility="gone" />

</FrameLayout>
