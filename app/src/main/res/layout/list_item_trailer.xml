<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:paddingTop="@dimen/trailer_vertical_padding"
              android:paddingBottom="@dimen/trailer_vertical_padding"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?attr/selectableItemBackground">

    <!--
         Asset for play icon generated from Roman Nurik's Asset Studio:
         https://romannurik.github.io/AndroidAssetStudio/icons-generic.html
    -->
    <ImageView
        android:id="@+id/image_video_icon"
        android:layout_width="@dimen/video_icon_width"
        android:layout_height="@dimen/video_icon_height"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:background="@color/borderColor"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:src="@drawable/ic_av_play_circle_outline" />

    <TextView
        android:id="@+id/text_trailer_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        tools:text="Nyan Cat [original]" />

</LinearLayout>